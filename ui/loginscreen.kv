<LoginScreen>:
	BoxLayout:
		orientation: 'vertical'
		
		Label:
			text: 'Login'	
		
		BoxLayout:
			orientation: 'horizontal'
			
			Label:
				text: 'Username'
				size_hint: 0.4, 1
			
			TextInput:
				multiline: False
				on_text: root.username = self.text
		
		BoxLayout:
			orientation: 'horizontal'

			Label:
				text: 'Password'
				size_hint: 0.4, 1
			
			TextInput:
				multiline: False
				password: True
				on_text: root.password = self.text

		Button:
			text: 'login'
			on_press: root.login()
			
